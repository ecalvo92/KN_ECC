@model KN_WEB.Models.UsuarioModel

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="row g-0 auth-row mt-3 me-3">
    <div class="col-lg-6">
        <div class="auth-cover-wrapper bg-primary-100">
            <div class="auth-cover">
                <div class="title text-center">
                    <h1 class="text-primary mb-10">Bienvenid@@</h1>
                    <p class="text-medium">
                        Inicia sesión para continuar
                    </p>
                </div>
                <div class="cover-image">
                    <img src="~/Template/images/signin-image.svg" alt="" />
                </div>
                <div class="shape-image">
                    <img src="~/Template/images/shape.svg" alt="" />
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="signin-wrapper">
            <div class="form-wrapper">

                <h3 class="mb-15">Inciar Sesión</h3>

                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @id="FormLogin" }))
                {
                    <div class="row">
                        <div class="col-12">
                            <div class="input-style-1">
                                <label>Identificación</label>
                                @Html.TextBoxFor(m => m.Identificacion, new { @placeholder = "Identificación" })
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="input-style-1">
                                <label>Contraseña</label>
                                @Html.TextBoxFor(m => m.Contrasenna, new { @type = "password", @placeholder = "Contraseña" })

                                <div class="text-danger w-100">
                                    @ViewBag.Mensaje
                                </div>
                            </div>
                        </div>

                        <div class="col-xxl-12 col-lg-12 col-md-12">
                            <div class="text-start text-md-end text-lg-start text-xxl-end mb-30">
                                <a href="@Url.Action("RecuperarContrasenna","Home")" class="hover-underline">
                                    Olvidó su contraseña?
                                </a>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="button-group d-flex justify-content-center flex-wrap">
                                <button type="submit" class="main-btn primary-btn btn-hover w-100 text-center">
                                    Procesar
                                </button>
                            </div>
                        </div>
                    </div>
                }

                <div class="singin-option pt-40">
                    <p class="text-sm text-medium text-dark text-center">
                        No tiene una cuenta?
                        <a href="@Url.Action("Registro","Home")">Regístrate</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Template/js/login.js"></script>